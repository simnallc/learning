pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub_id')
    }

    stages {
        stage('Build Image') {
            steps {
                script {
                    docker.build("ajayrao515/training:ajayrao515/training:latest")
                }
            }
        }
        stage('Push Image') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'DOCKERHUB_CREDENTIALS') {
                        docker.image("ajayrao515/training:ajayrao515/training:latest").push()
                    }
                }
            }
        }
    }
}
