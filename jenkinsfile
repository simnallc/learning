pipeline {
    agent any
    environment{
        registrycredential = "dockerhub_ID"
        }

    stages {
        stage('Clone') {
            steps {
                // Checkout the repository from GitHub
                checkout scm
            }
        }

        stage('Build') {
            steps {
                // Build the Docker image
                script {
                    def app = docker.build('ajayrao515/training') // Change this to your Docker Hub repo
                }
            }
        }

        stage('Test') {
            steps {
                // Placeholder for future unit tests
                echo 'Running tests...'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                // Push the image to Docker Hub
                script {
                     sh "docker login -u ajayrao515 -p ${dockerhubv1}"       
                     sh "docker push ajayrao515/training"
                    }
                }
            }
        }
    }
}



     
