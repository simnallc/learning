pipeline {
    agent any

    options {
        buildDiscarder(logRotator(numToKeepStr: '5', daysToKeepStr: '5'))
        timestamps()
    }

    environment {
        registryCredential = credentials('dockerhub_ID')
    }

    stages {
        stage('Build') {
            steps {
                script {
                    sh "docker build -t ajayrao515/training:latest ."
                }
            }
        }
        stage('Login to Docker Hub') {
            steps {
                script {
                    sh "echo $dockerhub_ID | docker login -u $ajayrao515 --password-Malahalrao31@#"
                }
            }
        }

        stage('Push Image') {
            steps {
                script {
                    sh "docker push ajayrao515/training:latest "
                }
            }
        }
    }
}



     
